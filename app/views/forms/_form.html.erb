<%= simple_form_for(@form) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :department, :input_html => { :class => 'input-field' } %>
    <%= f.collection_radio_buttons :category, [['Lead', 'Lead'] ,['Non-Lead', 'Non-Lead']],:first, :last %>
    <%= f.input :date_started, :input_html => { :class => 'datepicker input-field' } %>
    <%= f.input :date_completed, :input_html => { :class => 'datepicker input-field' } %>
    <%= f.input :category_level,collection: [['Critical', 'Critical'] ,['High', 'High'], ['Medium', 'Medium'], ['Low', 'Low']], prompt: "Select Category", :input_html => { :class => 'input-field' } %>
    <%= f.input :summary_of_problem, :input_html => { :class => 'input-field' } %>
    <%= f.input :impact, :input_html => { :class => 'input-field' } %>
    <%= f.input :applicable_to_other_areas, :input_html => { :class => 'input-field' } %>
    <%= f.input :solution_applied, :input_html => { :class => 'input-field' } %>
    <%= f.input :user_id,:as => :hidden, :input_html => { :class => 'input-field', :value => current_user.id } %>
  </div>

    
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>

<script type="text/javascript" charset="utf-8">
    $('.datepicker').datepicker();
</script>