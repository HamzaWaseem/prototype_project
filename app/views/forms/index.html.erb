<div class="x_panel">
  <div class="x_title">
    <h2>Froms</h2>
    <%= link_to 'New Form', new_form_path , class: 'btn btn-primary pull-right' %>
    <div class="clearfix"></div>
  </div>
  <div class="x_content">
    <table class="table table-striped" id="example">
      <thead>
      <tr>
        <th>Department</th>
        <th>Category</th>
        <th>Date started</th>
        <th>Date completed</th>
        <th>Summary</th>
        <th> Actions</th>
      </tr>
      </thead>

      <tbody>
      <% @forms.each do |form| %>
          <tr>
            <td><%= form.department %></td>
            <td><%= form.category %></td>
            <td><%= form.date_started %></td>
            <td><%= form.date_completed %></td>
            <td><%= form.summary %></td>
            <td><%= link_to 'Show', form, class: 'btn btn-primary btn-sm' %>
                <%= link_to 'Edit', edit_form_path(form), class: 'btn btn-info btn-sm' %>
                <%= link_to 'Destroy', form, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>





